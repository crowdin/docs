---
const { id } = Astro.props;
---

<dialog id={id} class="modal">
    <div class="modal-content">
        <header class="modal-header">
            <slot name="header">Header</slot>
            <form method="dialog">
                <button type="submit" class="close-button">&times;</button>
            </form>
        </header>
        <main class="modal-body">
            <slot name="main" />
        </main>
    </div>
</dialog>

<style>
    dialog {
        background-color: var(--crowdin-level-2-bg);
    }

    .modal {
        display: none;
        flex-direction: column;
        position: fixed;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
        width: 100%;
        height: 100%;
        max-width: 600px;
        justify-content: center;
        align-items: center;
        z-index: 1000;
        background-color: rgba(0, 0, 0, 0);
        padding: 20px;
    }

    .modal[open] {
        display: flex;
    }

    .modal-content {
        position: relative;
        padding: 0;
        border-radius: 8px;
        background: var(--sl-color-bg);
        width: 100%;
        z-index: 1001;
        overflow: hidden;
    }

    .modal-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 1rem;
        background-color: var(--sl-color-gray-6);
    }

    .modal-body {
        margin-top: 0 !important;
        padding: 1rem;
    }

    .close-button {
        background: none;
        border: none;
        font-size: 1.5rem;
        cursor: pointer;
        color: var(--sl-color-white);
    }

    .close-button:hover {
        color: var(--sl-color-gray-4);
    }
</style>
