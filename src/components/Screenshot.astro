---
import { Image } from "astro:assets";

interface Props {
    src: string;
    alt: string;
    class?: string;
    enterprise?: boolean;
}

const prefix = Astro.props.enterprise ? 'enterprise' : 'crowdin';
const path = '/src/assets/screenshots/' + prefix + Astro.props.src;
---

<picture>
    <img src={path} alt={Astro.props.alt} class={Astro.props.class} />
</picture>
